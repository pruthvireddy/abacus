fdi_frama(len) =>
    n = len
    n2 = math.floor(n / 2)
    hh1 = ta.highest(high[n2], n2)
    ll1 = ta.lowest(low[n2], n2)
    hh2 = ta.highest(high, n2)
    ll2 = ta.lowest(low, n2)
    hh = ta.highest(high, n)
    ll = ta.lowest(low, n)
    N1 = (hh1 - ll1) / n2
    N2 = (hh2 - ll2) / n2
    N3 = (hh - ll) / n
    d = (safe_log(N1 + N2) - safe_log(N3)) / safe_log(2)
    clamp(1 + d, 1.0, 2.0)
